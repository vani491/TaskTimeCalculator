<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/non_active_background"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:elevation="4dp"
        android:translationZ="2dp">

        <!-- Main Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Title -->
            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie Watching"
                android:textSize="22sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="4dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/taskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a sample description for the list item. You can add more details here about the order or item."
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="3"
                android:visibility="gone"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Timer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <!-- Timer Text -->
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time: 0 min"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/timer_text"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvTotalTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total: 0 min"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/timer_text"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>
</layout>
